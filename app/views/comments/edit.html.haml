= simple_form_for @comment, :html => {:class => "form-vertical"} do |f|
  .fieldset
    %legend= "Edit Comment"

    = f.input :body, :as => :text, :input_html => { :cols => 100, :rows => 5 }

    .form-actions
      = f.submit nil, :class => 'btn btn-primary', :id => 'submit'
      = link_to 'Cancel', :back, :class => 'btn'