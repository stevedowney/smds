%div[qwa.quote]
  %div.voting.pull-right
    .vote_count= qwa.vote_net_count
    .vote_links<
      = link_to_toggle_vote_up(qwa)
      = link_to_toggle_vote_down(qwa)
  
  %div
    .by
      = qwa.who
      said
    .text
      = qwa.text
  
    - if qwa.context.present?
      .context= qwa.context
    .action_links
      = link_to_comments(qwa)
      - if user_signed_in?
        = link_to_favorite(qwa)
        = link_to_email_quote(qwa)
        = link_to_delete_quote(qwa)
        =# link_to_flag_quote(qwa)
        = link_to_edit_quote(qwa)
      %span.owner.pull-right= link_to_submitted_by(qwa.owner)
    