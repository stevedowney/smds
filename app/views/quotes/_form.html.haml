= simple_form_for @quote, :remote => @quote.persisted?, :html => {:class => "form-horizontal"} do |f|
  = error_messages_for(@quote)

  = f.input :who, :required => false, :placeholder => "Who said it?", :input_html => {:size => 30, :maxlength => 101, :class => 'span4'}
  = f.input :text, :required => false, :label => "Quote", :as => 'text', :placeholder => "What did they say?", :input_html => {:rows => 5, :class => 'span5', :maxlength => 2001}
  = f.input :context, :as => 'text', :placeholder => 'If you want, add some context to the quote; something like: "While we were driving home" or "This morning in the shower"', :input_html => {:rows => 2, :class => 'span5', :maxlength => 2001}

  .form-actions
    = f.submit nil, :class => 'btn btn-primary', :id => 'submit-full', :data => {:disable_with => "Processing ..."}
    = or_span
    = link_to("Cancel", '#', :id => 'quote-form-cancel')
