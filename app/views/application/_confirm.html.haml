%div{:class => 'modal hide', :id => 'tb-confirm', :style => "display: none"}
  %div.modal-header
    %a{:class => 'close', 'data-dismiss' => 'modal'}
      x
    %h3#tb-confirm-title
      Confirm
  %div.modal-body
    %p#tb-confirm-message No confirmation message
  %div.modal-footer
    %a{:id => "tb-confirm-ok-btn", :href => '#', :class => "btn btn-primary"}
      = icon_ok + " Ok"
    %a{:id => "tb-confirm-cancel-btn", :href => '#', :class => "btn modal-cancel"}
      = icon_delete + " Cancel"