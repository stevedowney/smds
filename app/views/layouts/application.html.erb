<!DOCTYPE html>
<html>
<head>
    <title>He was all ...</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= include_gon %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
  <body id='<%= "#{controller_name}_#{action_name}" %>' data-controller="<%= controller_name%>" data-action="<%= action_name %>">

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    </a>
    <%= link_to "He was all ...", root_path, :class => 'brand' %>
    <div class="nav-collapse">
      <ul class="nav">
        <% if admin? %>
          <li><%= link_to "Users", admin_users_path %></li>
          <li><%= link_to "View Feedback", admin_feedbacks_path %></li>
        <% end %>
      </ul>

      <ul class="nav pull-right">
        <li><%= link_to "Feedback", new_feedback_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <% if user_signed_in? %>
              Logged in as <strong><%= current_user.username %></strong>
              <%= "(admin)" if admin? %>
            <% else %>
              Account
            <% end %>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">

            <% if user_signed_in? %>
              <li><%= link_to icon(:user) + ' Edit profile', edit_user_registration_path %></li>
              <li><%= link_to icon(:remove) + " Logout", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to icon(:lock) + " Login", new_user_session_path %></li>
              <li><%= link_to icon(:user) + " Sign up", new_user_registration_path %></li>
            <% end %>


          </ul>
  </li>
</ul>
  </div>
  </div>
</div>
</div>

<div class="container">
  <% flash.each do |name, msg| %>
    <% if msg.present? %>
      <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
        <a class="close" data-dismiss="alert">Ã—</a>
          <%= msg %>
      </div>
    <% end %>
  <% end %>

	<div class="row">
		<div class="span9">
			<%= yield %>
    </div>
		<div class="span3 sidebar">
      <h2>More</h2>
      <%= link_to 'Share', sharing_email_path %><br />
      <%= link_to 'Tell us what you think', new_feedback_path %><br /><br />
      <a href="https://twitter.com/HeWasAll" class="twitter-follow-button" data-show-count="false">Follow @HeWasAll</a>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
    </div>
	</div>
</div>

    <%= render :partial => 'alert' %>
    <%= render :partial => 'confirm' %>

  </body>
</html>
